@model PhoneStoreSystem.Models.Navigation

@{
    ViewBag.Title = "编辑菜单";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<span class="createLink">@Html.ActionLink("返回上一页", "Index")</span>
<span style="color:green">( *系统最多只允许存在5个菜单)</span>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="create_edit_div">
        <legend>导航菜单</legend>
        <span style="color:red">@ViewBag.StatusMessage</span>

        @Html.HiddenFor(model => model.NavId)

        <div class="editor-label">
            @Html.LabelFor(model => model.NavName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NavName)
            @Html.ValidationMessageFor(model => model.NavName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NavUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NavUrl)
            @Html.ValidationMessageFor(model => model.NavUrl)
        </div>

        <p style="text-align:center;width:100%">
           <!--<input type="button" name="btnUpdate" value="创建" id="btnUpdate" />-->
           <input type="submit" value="提 交" class="btn" />&nbsp;&nbsp;
           <input type="reset" value="重 置" class="btn" />
        </p>
    </fieldset>
}



@section Scripts {
   
    @Scripts.Render("~/bundles/jqueryval")
   
   <script>
       jQuery(function ($) {
           $("#navSet").addClass("selected");
           $("#main_container").fadeIn("slow");
       });
   </script>
}